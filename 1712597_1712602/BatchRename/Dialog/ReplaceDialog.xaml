      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BatchRename.Dialog"
      mc:Ignorable="d" 
      d:DesignHeight="160" d:DesignWidth="250" Background="AliceBlue"
      Title="ReplaceDialog">
